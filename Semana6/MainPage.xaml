<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana6.MainPage">
    <StackLayout>

        <Entry x:Name="txtCodigo" Placeholder="Ingrese codigo" Keyboard="Numeric"/>
        <Entry x:Name="txtNombre" Placeholder="Ingrese nombre" />
        <Entry x:Name="txtApellido" Placeholder="Ingrese apellido"/>
        <Entry x:Name="txtEdad" Placeholder="Ingrese edad" Keyboard="Numeric"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Text="Insertar" x:Name="btnInsertar" Clicked="btnIngresar_Clicked" />
            <Button Grid.Row="0" Grid.Column="1" Text="Regresar" x:Name="btnRegresar" Clicked="btnRegresar_Clicked" ></Button>


        </Grid>

        
    </StackLayout>

</ContentPage>
